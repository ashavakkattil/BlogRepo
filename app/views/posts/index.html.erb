<h4>The List of Posts in this blog</h4>

<table >

<% @post.each do |post| %>
<tr>
<td>
	<%= post.title %>
</td>
<td><%= post.text %><td>
	<td><%= link_to 'Show', post_path(post.id) %></td>
	<td><%= link_to 'Edit', edit_post_path(post) %></td>
	<td><%= link_to 'Destroy', post_path(post,@user.id),
  	method: :delete, data: { confirm: 'Are you sure?' } %></td>
<% end %>
</table>
