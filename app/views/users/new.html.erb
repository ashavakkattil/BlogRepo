<h3>New user</h3>

<%= form_for :user, url: users_path, :html => { :multipart => true } do |f| %>
<%= f.file_field :avatar %>
  <p>
    <%= f.label :Name %><br>
    <%= f.text_field :Name %>
  </p>
 
  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
  <%= link_to 'Back' , users_path %>
<% end %>